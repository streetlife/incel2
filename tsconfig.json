{
  "compilerOptions": {
    "target": "ESNext", // or ES2022 / ES2020
    "module": "ESNext", // <- must be ES2020+ for import.meta
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"] // optional but useful
  },
}